@model DoAn1_QuanLyThuVien.Models.Sach

@{
    ViewBag.Title = "ThemSach";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<body>

    <!-- ***************************** -->
    <!-- Render body -->
    <!-- ChangePass start -->
    <div class="Header_Dau_Sach">
        <div class="row align-items-center ">
            <div class="col-md-4 ">

            </div>
            <div class="col-md-4">
                <h3 class="Them-Dau-sach-header-content"> Thêm sách</h3>
            </div>
            <div class="col-md-4">
                <a class="DauSach-btn-add" href="#">Quay lại</a>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="login_register">
            <div class="changePass">
                <form class="changePass" >
                    <div class="NhapSach-TenSach">
                        <h4>
                            Tên sách :
                            @*@Html.LabelFor(model => model.DauSach.TenSach)*@
                            <h4 class="NhapSach-TenSach-conten">Đắc Nhân Tâm</h4>
                        </h4>
                    </div>
                    <div class="NhapSach-MaSach"><h4>Mã đầu sách : <h4 id="id" class="NhapSach-TenSach-conten">@ViewBag.Id_dauSach</h4></h4></div>
                    <div class="NhapSach-TinhTrang">
                        <h4>Tình trạng: </h4>
                        <Select>
                            <option value="1">Còn sách</option>
                            <option value="2">Cho mượn</option>
                            <option value="3">Mất</option>
                            <option value="4">Hỏng</option>
                        </Select>
                    </div>
                    <div class="changePass-field NhapSach-SoKiemSoat ">
                        @*@Html.TextBoxFor(model => model.SoKiemSoat, new { @class = "changePass-input", @id = "sks" })*@
                        <input  name="sks" type="text" class="changePass-input  " placeholder="Nhập số kiểm soát" required>
                    </div>
                    <textarea id="aaa" class="NhapSach-GhiChu" placeholder=" Ghi chú..." cols="33" rows="5"></textarea>

                    <button type="submit" class="changePass-submit">Thêm sách</button>

                    <div class="mess-error-changePass">Trùng số kiểm soát !</div> <!-- bỏ viewbag vào đây -->
                </form>
                
            </div>
        </div>
    }






</body>
</html>

